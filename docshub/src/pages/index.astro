---
import LayoutMain from "@/layouts/layoutMain.astro";
import Inicio from "@/pages/inicio.astro";
import InicioDoc from "./inicio.mdx";
import defaultDocshubConfig from "docshub.config";
import Sidebar from "@/components/sidebar/sidebar.astro";

const url = new URL(Astro.request.url).href;
---

<LayoutMain
  title={defaultDocshubConfig.documentationTitle}
  description={defaultDocshubConfig.documentationTitle}
>
  <Sidebar />
  <Inicio
    title={defaultDocshubConfig.documentationTitle}
    description={defaultDocshubConfig.author || ''}
    category="Introduction"
    docUrl={url}
  >
    <InicioDoc />
  </Inicio>
</LayoutMain>
