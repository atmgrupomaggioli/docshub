---
import type { MarkdownHeading } from "astro";

import PageContent from "@/components/page-content.astro";
import Sidebar from "@/components/sidebar/sidebar.astro";
import CopyToClipboard from "@/components/copyToClipboard.astro";

import { ViewTransitions } from "astro:transitions";
import { cx } from "@/utils/cx";

import { ContainerPage } from "@/components/ui/container-page";

// Docs layout props:
export interface Props {
  title: string;
  description: string;
  category: string;
  docUrl: string;
  publishDate?: string;
  headings?: MarkdownHeading[];
}

const { title, description, category, publishDate, docUrl, headings } =
  Astro.props;
---

<ViewTransitions />
<CopyToClipboard />

<article class={cx(ContainerPage, "h-full")}>
  <Sidebar />
  
  <PageContent
    title={title}
    description={description}
    category={category}
    publishDate={publishDate}
    url={docUrl}
    headings={headings}
  >
    <slot />
  </PageContent>

</article>
